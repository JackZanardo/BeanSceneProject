@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-white">
                <h2>Welcome to Bean Scene!</h2>
                <div class="row">
                    <img src="~/images/tables.jfif" alt="tables"/>
                </div>
                @if (User.IsInRole("Member"))
                {
                    <div class="d-grid gap-2 p-1">
                        <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Reservation" asp-action="Create">Book Now</a>
                    </div>
                    
                }
                else
                {
                    <div class="row justify-content-center">
                        <div class="col-md-6 p-1">
                            <div class="d-grid gap-2">
                                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Reservation" asp-action="Create">Book Now</a>
                            </div>
                        </div>
                        <div class="col-md-6 p-1">
                            <div class="d-grid gap-2">
                                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>
</section>


