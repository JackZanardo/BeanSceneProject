<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeanSceneProject</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <header class="bg-white">
        @if (User.IsInRole("Admin"))
        {
            <h1 class="p-1 bg-white">Bean Scene Manager</h1>
        }
        @if (User.IsInRole("Staff"))
        {
            <h1 class="p-1 bg-white">Bean Scene Staff</h1>
        }
        <nav class="navbar navbar-expand-md navbar-dark bg-primary">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Staff" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Staff" asp-controller="Sitting" asp-action="Index">Manage Sittings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Staff" asp-controller="StaffReservation" asp-action="Index">Manage Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Manage Staff</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Reports</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="page-footer text-muted p-1 bg-white fixed-bottom">
        <ul class="list-unstyled list-inline text-center">
            <li class="list-inline-item">
                <a class="btn-floating mx-1">
                    <img src="~/images/Footer/facebook_small.png" height="25" width="25" alt="facebookLogo" />
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating mx-1">
                    <img src="~/images/Footer/instagram_small.png" height="25" width="25" alt="instagramLogo" />
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating mx-1">
                    <img src="~/images/Footer/paypal_small.png" height="25" width="25" alt="paypalLogo" />
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating mx-1">
                    <img src="~/images/Footer/twitter_small.png" height="25" width="25" alt="twitterLogo" />
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating mx-1">
                    <img src="~/images/Footer/youtube-variation_small.png" height="25" width="25" alt="youtubeLogo" />
                </a>
            </li>
        </ul>
        <div>
            Bean Scene Restaurant
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
