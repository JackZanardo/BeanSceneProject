@model IEnumerable<BeanSceneProject.Data.StaffMember>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">
    <div class="col-12 bg-white">
        <h2 class="px-2">Staff List</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-12 bg-white">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Staff Type
                    </th>
                    <th>
                        Restaurant
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Restaurant.Name)
                        </td>
                        <td>
                            <button asp-area="Staff" asp-controller="Reservation" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">
                                Manage Reservations
                            </button>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

