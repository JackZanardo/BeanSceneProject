
@model BeanSceneProject.Areas.Staff.Models.Staff.Create

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-6 bg-white">
        <h2 class="px-2">Manage Sittings</h2>
        <h3 class="px-2 text-center">Schedule New Sitting</h3>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-6 p-2 bg-white">
        <form asp-action="Create" id="SittingCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="RestuarantId" class="control-label"></label>
                <select asp-for="RestuarantId" asp-items="Model.Restraunts" class="form-select" id="RestuarantSelect">
                    <option value="">--Select Restuarant--</option>
                </select>
                <span asp-validation-for="RestuarantId" class="text-danger" id="RestuarantSelectHelp"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="StaffTypeId" class="control-label"></label>
                <select asp-for="StaffTypeId" class="form-select" id="StaffTypeSelect">
                    <option value="">--Select Sitting Type--</option>
                </select>
                <span asp-validation-for="StaffTypeId " class="text-danger" id="StaffTypeSelectHelp"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger" id="FirstNameHelp"></span>
                <span class="text-warning" id="FirstNameWarn"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" id="FirstName" />
                <span asp-validation-for="LastName" class="text-danger" id="LastNameHelp"></span>
                <span class="text-warning" id="LastNameWarn"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="FirstName" />
                <span asp-validation-for="Email" class="text-danger" id="EmailHelp"></span>
                <span class="text-warning" id="EmailWarn"></span>
            </div>
            <div class="form-group d-md-flex align-items-center justify-content-center p-1">
                <input type="submit" value="Create" class="btn btn-success btn-lg m-1" style="width:50%" />
                <button asp-action="Index" class="btn btn-warning btn-lg m-1" style="width:50%">
                    Back to Sittings
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/sittingCreate.js"></script>
}
